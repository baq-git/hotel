<div x-data="{isShowBooking: false}" class="rounded-box border shadow-lg bg-white mt-8">
  <div class="p-6">
    <div class="flex flex-row justify-between">
      <h2 class="text-2xl font-bold mb-4">
        Booking History
      </h2>
      <button
        hx-get="{{route('getBookingsByRoomId', {roomId: booking.roomId})}}"
        hx-target="[hx-bookings-by-room]"
        hx-swap="outerHTML"
        class="btn btn-circle btn-sm btn-ghost">
        @svg('iconoir:eye', {width: 20, height: 20})
      </button>
    </div>
    <div class="overflow-x">
      <table class="table">
        <thead>
          <tr>
            <th>
              Order ID
            </th>
            <th>
              Order Date
            </th>
            <th>
              Room Type
            </th>
            <th>
              No.
            </th>
            <th>
              Check in
            </th>
            <th>
              Check out
            </th>
            <th>
              Guest
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr hx-bookings-by-room>
            <p class="block w-full text-center text-xs text-gray-500 mb-4">Click the eye to see room booking history</p>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="flex justify-end space-x-4 mt-4">
      <button class="btn">
        Close
      </button>
      <button class="btn btn-primary">
        <span class="mr-2">âœ“</span>Checked Out
      </button>
    </div>
  </div>
</div>
